<div class='signup-lander-container'>
<div class='org-intro'>
  <div class='org-name-header'>
  YOUR ORGANIZATION
  </div>
  <div class='org-name'>
    {{org.org_name}}
  </div>
  <div class='org-description'>{{org.description}}
  </div>
    <div><strong>Location:</strong> {{org.location}}  |  <strong>Organization Type:</strong> {{org.org_type}}</div>
</div>
  <div class='create-acct-header'>Create an account to build a backpack for {{org.org_name}}:</h3>
    <form class='signup-form' action="/org/{{org.id}}/users/" method="post">
      <div class='org-id-field'>
        <label for="org">Organization ID</label>
        <input type="text" name="org" value="{{org.id}}" readonly="readonly">
      </div>

      <div>
        <label for="first_name">First Name</label>
        <input type="text" name="first_name" required>
      </div>
      <div>
        <label for="last_name">Last Name</label>
        <input type="text" name="last_name" required>
      </div>

      <div>
        <label for="email">Email Address</label>
        <input type="text" name="email" required>
      </div>

      <div>
        <label for="street">Mailing Address</label>
        <input type="text" name="street">
      </div>

      <div>
        <label for="city">City</label>
        <input type="text" name="city">
      </div>
      <div>
        <label for="state">State</label>
        <input type="text" name="state">
      </div>

      <div>
        <label for="zip_code">Zip Code</label>
        <input type="text" name="zip_code">
      </div>

      <div>
        <label for="password">Password</label>
        <input type="password" name="password" required>
      </div>

      <input class='submit-btn' type="submit" value="Submit">
    </form>
  </div>
