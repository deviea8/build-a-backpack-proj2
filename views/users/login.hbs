<h1>Login page</h1>
{{#if err}}
  <p>{{err}}</p>
{{/if}}

<form action="/sessions/login" method="post">
  <div>
    <label for="email">email</label>
    <input type="text" name="email">
  </div>

  <div>
    <label for="password">password</label>
    <input type="password" name="password">
  </div>

  <input type="submit" value="Submit">
</form>
