<div class="signup-lander-container">

  <div class='org-name-dashboard'>{{org.org_name}}</div>
  <div class='backpack-drive-title'>Backpack Drive Dashboard</div>
  <div class='pledge-list'>
    <div class='org-name-header'>{{org.org_name}} Pledgers</div>
      <table class='table list-of-donors'>
        <thead>
        <tr>
          <th>Name</th>
          <th>Email Address</th>
          <th># Backpacks Created</th>
        </tr>
        </thead>
        <tbody>
        {{#each org.users}}
          <td><a href="/org/{{../org.id}}/users/{{this.id}}/backpacks">{{this.first_name}} {{this.last_name}}</a></td>
          <td class='email-address'>{{this.email}}</td>
          <td>{{this.backpacks.length}}</td>
        </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
    <div class='invite-section'>
      <div class='org-name-header'>Invite participants</div>
        <p>Invite members of your organization, friends, and family to participate your backpack drive!</p>
        <a href='https://www.facebook.com/sharer/sharer.php?u=https%3A//sleepy-headland-48709.herokuapp.com/org/{{org.id}}' target=_blank><button class='btn select-org-button'>Share on Facebook</button></a>
    </div>
    <hr>
    <div class='section-header'>Backpack Summary</div>
    <div class="backpack-summary-table">
    <table class='table'>
      <thead>
      <tr>
        <th class='backpack-name'>BACKPACK NAME</th>
        <th>COLOR</th>
        <th>PENCILS</th>
        <th>FOLDERS</th>
        <th>NOTEBOOKS</th>
        <th>SCISSORS</th>
        <th>ERASERS</th>
        <th>COLORED PENCILS</th>
        <th>MARKERS</th>
        <th>GLUE STICKS</th>
        <th>MESSAGE TO RECIPIENT</th>
      </tr>
      </thead>
      <tbody>
      {{#each org.users}}
      {{#each backpacks}}
        <td class='backpack-name'>{{this.backpack_name}}</td>
        <td>{{this.backpack_color}}</td>
        <td>{{this.pencils}}</td>
        <td>{{this.folders}}</td>
        <td>{{this.notebooks}}</td>
        <td>{{this.scissors}}</td>
        <td>{{this.erasers}}</td>
        <td>{{this.colored_pencils}}</td>
        <td>{{this.markers}}</td>
        <td>{{this.glue_sticks}}</td>
        <td>{{this.recipient_note}}</td>
      </tr>
        {{/each}}
      {{/each}}
      </tbody>
    </table>
  </div>

    <div>
  {{#each org.backpacks}}
  <div class="dashboard-backpack-info">
  <li>{{this}}</li>
  </div>
  {{/each}}
  </div>

  </div>

  <form action="/sessions?_method=DELETE" method="POST">
    <div class='logout-section'>
      <input type="submit" value="Log Out" class="btn btn-default back-to-list-button">
    </div>
    </form>
