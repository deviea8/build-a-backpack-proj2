<div class='signup-lander-container'>
<h1>Edit {{backpack.backpack_name}}</h1>

<div class="row">
    <form action="/org/{{orgId}}/users/{{userId}}/backpacks/{{backpack.id}}?_method=PATCH" method="POST" class="col-md-6 col-md-offset-3">
        <div class="form-group">
            <label for="first_name">Backpack Name:</label>
            <input type="text" name="backpack_name" value="{{backpack.backpack_name}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="pencils">Pencils:</label>
            <input type="number" name="pencils" value="{{backpack.pencils}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="folders">Folders:</label>
            <input type="number" name="folders" value="{{backpack.folders}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="notebooks">Notebooks:</label>
            <input type="number" name="notebooks" value="{{backpack.notebooks}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="scissors">Scissors:</label>
            <input type="number" name="scissors" value="{{backpack.scissors}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="erasers">Erasers:</label>
            <input type="number" name="erasers" value="{{backpack.erasers}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="colored_pencils">Colored Pencils:</label>
            <input type="number" name="colored_pencils" value="{{backpack.colored_pencils}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="markers">Markers:</label>
            <input type="number" name="markers" value="{{backpack.markers}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="glue_sticks">Glue Sticks:</label>
            <input type="number" name="glue_sticks" value="{{backpack.glue_sticks}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="backpack_color">Backpack Color:</label>
            <input type="text" name="backpack_color" value="{{backpack.backpack_color}}" class="form-control">
        </div>
        <div class="form-group">
            <label for="recipient_note">Recipient Note:</label>
            <input type="text" name="recipient_note" value="{{backpack.recipient_note}}" class="form-control">
        </div>

        <div>
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>


<div>
    <a href="/backpacks/{{backpack.id}}" class="btn btn-default">Back</a>
    <a href="/backpacks" class="btn btn-default">Main Page</a>
</div>
</div>
