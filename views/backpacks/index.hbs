<div class='signup-lander-container'>
  <div class='org-name-dashboard'>{{org.org_name}}</div>
  <div class='backpack-section-header'>{{user.first_name}}'s Backpacks</div>
  <a href="/org/{{orgId}}/users/{{user.id}}/backpacks/new" class="build-new-backpack-btn btn btn-default submit-btn">Build a New Backpack</a>
    <div class='card-container'>
    {{#each backpacks}}
      <div class='backpack-card'><a href="/org/{{../orgId}}/users/{{../user.id}}/backpacks/{{this.id}}">
        <div class='index-backpack-name'>{{this.backpack_name}}</div>
        <div class='backpack-color index-backpack-color'>Backpack Color: {{this.backpack_color}}</div>
      </div></a>
    {{/each}}
    </div>

</div>

<form action="/sessions?_method=DELETE" method="POST">
    <div class='logout-section'>
      <input type="submit" value="Log Out" class="btn btn-default back-to-list-button">
    </div>
  </form>
